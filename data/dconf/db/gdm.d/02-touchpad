[org/gnome/desktop/peripherals/touchpad]
# How to generate software-emulated buttons [disabled 'none' | number of fingers 'fingers' | hardware default 'default']
click-method='areas'
# When enabled, touchpads will be disabled whie typing on the keyboard
disable-while-typing=true
# When enabled, touchpads that support edge scrolling will have that feature enabled
edge-scrolling-enabled=false
# Swap left and right mouse buttons [left-handed 'left' | right-handed 'right' | mouse setting 'mouse']
left-handed='mouse'
# Set this to true to enable natural (reverse) scrolling for touchpads
natural-scroll=true
# Defines the situations in which the touchpad is enabled ['enabled' | 'disabled' | 'disabled-on-external-mouse']
send-events='enabled'
# Set this to true to be able to start a drag by tapping and immediatly moving the finger
tap-and-drag=true
# Set this to true to send mouse clicks by tapping the touchpad
tap-to-click=true
# Enable two-finger scrolling
two-finger-scrolling-enabled=true