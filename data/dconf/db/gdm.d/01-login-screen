[org/gnome/login-screen]
# Number of times a user is allowed to atempt authentication, before going back to user selection
allowed-failures=3
# Set to true to show the banner message text
banner-message-enable=true
# Text banner message to show in the login window
banner-message-text='Willkommen beim DRK KV SÃ¤ckingen e.V.'
# Set to true to disable showing the restart burrons in the login window
disable-restart-buttons=false
# Disable the user list on the login screen
disable-user-list=false
# Allow users who have enrolled their fingerprints to log in using those prints
enable-fingerprint-authentication=true
# Disable password Authentication to force users to user fingerprints or smartcards
enable-password-authentication=true
# Allow users to use smartcards to log in
enable-smartcard-authentication=false
# Display a small logo on the login screen
logo='/usr/share/logos/drk-logo.png'