[org/gnome/desktop/screensaver]
# The number of seconds after the screensaver activation before locking the screen
lock-delay=0
# Lock the screen when the screensaver goes active
lock-enabled=false
# Opacity with wich to draw the background picture
picture-opacity=100
# URI to use for the background image. Only supports local URIs (file:///)
picture-uri='/usr/share/backgrounds/gnome/adwaita-d.webp'
# Whether the user's full name is shown in the lock screen ot not
show-full-name-in-top-bar=true
# Offer an option in the unlock dialogue to switch to a different user account
user-switch-enabled=false